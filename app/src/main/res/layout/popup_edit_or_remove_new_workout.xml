    <EditText
        android:id="@+id/txtRepInteger3"
        android:layout_width="94dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Toistot"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/txtWeightsFloat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRepInteger2" />

    <EditText
        android:id="@+id/txtWeightsFloat3"
